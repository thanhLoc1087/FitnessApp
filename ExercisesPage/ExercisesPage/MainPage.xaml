<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExercisesPage.MainPage"
             xmlns:local="clr-namespace:ExercisesPage"
             Title="Exercises">
    <ContentPage.ToolbarItems/>
    <StackLayout>
        <Label/>
        <CollectionView BackgroundColor="AliceBlue"
                  x:DataType="local:MainViewModel" 
                  ItemsSource="{Binding Exercises, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Exercise">
                    <StackLayout>
                        <Label Text="{Binding Name}"/>
                        <Label Text="{Binding Difficulty}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
